<h2>Lista de Recepcion</h2>

@{ List<Recepcion> recepciones = (List<Recepcion>)ViewBag.recepciones;}

<table class="table table-bordered">
    <tr>
        <td>Numero</td>
        <td>Cantidad Ingresada</td>
        <td>Total pagado</td>
        <td>Id_orden</td>
        <td>Producto</td>
    </tr>
    @foreach (var recepcion in recepciones)
    {
        <tr>
            <td>@recepcion.N_recepcion</td>
            <td>@recepcion.Cantidad</td>
            <td>@recepcion.Total</td>
            <td>@recepcion.OrdenId</td>
            <td>@recepcion.Producto.Nombre_producto</td>
        </tr>
    }
</table>