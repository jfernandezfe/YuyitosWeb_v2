        </ul>
    </div>
</nav>

<h2>Listado de Ventas</h2>

@{ List<Registro_ventas> ventas = (List<Registro_ventas>)ViewBag.ventas;}

<table class="table table-bordered">
    <tr>
        <td>Id</td>
        <td>Cantidad</td>
        <td>Total pagado</td>
        <td>Fecha</td>
        <td>Fiado</td>
        <td>Producto</td>
    </tr>
    @foreach (var venta in ventas)
    {
        <tr>
            <td>@venta.Id_venta</td>
            <td>@venta.Cantidad</td>
            <td>@venta.Total</td>
            <td>@venta.Fecha_venta</td>
            <td>@venta.Cliente_fiado</td>
            <td>@venta.Producto.Nombre_producto</td>
        </tr>
    }

</table>
<ul class="nav navbar-nav">
    <li><a class="badge" href="/Ventas/CrearVenta/">Registrar Venta</a></li>
</ul>

@TempData["mensaje"];

