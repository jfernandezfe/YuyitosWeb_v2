<h2>Crear nueva Orden</h2>



@using (Html.BeginForm())
{   

    @Html.LabelFor(o => o.Fecha_pedido)
    @Html.TextBoxFor(o => o.Fecha_pedido)
    <br />
    @Html.LabelFor(o => o.Cantidad)
    @Html.TextBoxFor(o => o.Cantidad)
    <br />
    @Html.LabelFor(o => o.Estado)
    @Html.TextBoxFor(o => o.Estado)
    <br />
    @Html.LabelFor(o => o.ProductoId, "Producto")
    @Html.DropDownListFor(o => o.ProductoId, new SelectList(ViewBag.productos, "Id_producto", "Nombre_producto"))
    <br />
    @Html.LabelFor(o => o.ProveedorId, "Proveedor")
    @Html.DropDownListFor(o => o.ProveedorId, new SelectList(ViewBag.proveedores, "Rut_proveedor", "Nombre_Proveedor"))
