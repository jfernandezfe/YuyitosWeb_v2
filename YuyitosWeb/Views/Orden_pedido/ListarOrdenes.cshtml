        </ul>
    </div>
</nav>
<h2>Listado de Ordenes</h2>

@{ List<Orden_pedido> ordenes = (List<Orden_pedido>)ViewBag.ordenes;}

<table class="table table-bordered">
    <tr>
        <td>Id_orden</td>
        <td>Fecha_pedido</td>
        <td>Cantidad</td>
        <td>Estado</td>
        <td>Producto</td>
        <td>Proveedor</td>

    </tr>
    @foreach (var orden in ordenes)
    {
        <tr>
            <td>@orden.Id_pedido</td>
            <td>@orden.Fecha_pedido</td>
            <td>@orden.Cantidad</td>
            <td>@orden.Estado</td>
            <td>@orden.Producto.Nombre_producto</td>
            <td>@orden.Proveedor.Nombre_proveedor</td>
        </tr>
    }

</table>
<ul class="nav navbar-nav">
    <li><a class="badge" href="/Orden_pedido/CrearOrden/">Nueva Orden</a></li>
</ul>

